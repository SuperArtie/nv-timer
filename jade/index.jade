doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title Yer on da timer!!!
    link(href='css/ionic.app.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_controller.js')
  body(ng-app='nv-timer', ng-controller='MainCtrl')
    ion-pane
      ion-header-bar.bar-stable
        h1.title Yo yo yo!!!
      ion-content.has-header
        h1 {{title}}
        .button.button-assertive(ng-click='startTimer(5)') 5
        .button.button-assertive(ng-click='startTimer(4)') 4
        .button.button-assertive(ng-click='startTimer(3)') 3
        .button.button-assertive(ng-click='startTimer(2)') 2
        .button.button-assertive(ng-click='startTimer(1)') 1
        .button.button-assertive(ng-click='startTimer(.5)') :30
        .button.button-assertive(ng-click='startTimer(.25)') :15
        h2 {{min}} : {{sec}}
